<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maroon"
    tools:context=".auth.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/abhaya_libre_semibold"
        android:text="Nina Dobrev"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/profileImage2"
        app:layout_constraintStart_toStartOf="@+id/profileImage2"
        app:layout_constraintTop_toBottomOf="@+id/profileImage2" />

    <View
        android:id="@+id/divider2"
        android:layout_width="234dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yourarticle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Your Articles"
        android:drawableStart="@drawable/article"
        android:drawablePadding="23dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@id/divider2"
        app:layout_constraintStart_toStartOf="@id/divider2"
        app:layout_constraintTop_toBottomOf="@id/divider2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feedback_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="FeedBack"
        android:drawableStart="@drawable/feedback"
        android:drawablePadding="23dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@id/yourarticle_btn"
        app:layout_constraintStart_toStartOf="@id/yourarticle_btn"
        app:layout_constraintTop_toBottomOf="@id/yourarticle_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="LogOut"
        android:drawableStart="@drawable/logout"
        android:drawablePadding="23dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@id/feedback_btn"
        app:layout_constraintStart_toStartOf="@id/feedback_btn"
        app:layout_constraintTop_toBottomOf="@id/feedback_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>