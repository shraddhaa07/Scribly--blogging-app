<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorWhite">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/love_ya_like_a_sister"
        android:text="Scribly"
        android:textColor="@color/colorBlack"
        android:textSize="50sp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your story \nwith us."
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="19sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@id/subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:padding="5dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:strokeColor="@color/red"
        app:strokeWidth="2dp" />

    <!-- Register Text -->
    <TextView
        android:id="@+id/newhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New here?"
        android:fontFamily="@font/love_ya_like_a_sister"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@+id/newhere"
        android:layout_alignStart="@+id/newhere"
        android:layout_alignEnd="@+id/newhere"
        android:layout_marginStart="-93dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-106dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:padding="5dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="8dp"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp" />

</RelativeLayout>