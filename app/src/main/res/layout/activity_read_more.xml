<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin"
    tools:context=".activity.ReadMoreActivity">

    <ImageButton
        android:id="@+id/backbtn2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="352dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="2dp"
        android:fontFamily="@font/dailymag_bold"
        android:text="Heading"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/backbtn2"
        app:layout_constraintTop_toBottomOf="@+id/backbtn2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/readmore_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:circularflow_radiusInDP="100dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/register"
        app:layout_constraintTop_toBottomOf="@id/topic"
        app:layout_constraintLeft_toLeftOf="@id/topic"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Nina Dobrev"
        android:textAlignment="center"
        android:textColor="@color/light_grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/readmore_img"
        app:layout_constraintLeft_toRightOf="@id/readmore_img"
        app:layout_constraintTop_toTopOf="@id/readmore_img" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="25 March 2025"
        android:textColor="@color/light_grey"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/author"
        app:layout_constraintRight_toRightOf="@id/topic"
        app:layout_constraintTop_toTopOf="@+id/author" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="@id/readmore_img"
        app:layout_constraintTop_toBottomOf="@id/readmore_img"
        app:layout_constraintEnd_toEndOf="@id/date"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/BlogView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your long content here..."
            android:fontFamily="@font/dailymagazine_semibold"
            android:textColor="@color/black"
            android:padding="10dp" />
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingLikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:backgroundTint="@color/black"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toTopOf="@id/floatingSaveButton"
        app:layout_constraintRight_toRightOf="@id/floatingSaveButton"
        app:shapeAppearanceOverlay="@style/round"
        app:srcCompat="@drawable/love"
        app:tint="#ffff" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        app:backgroundTint="@color/black"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/round"
        app:srcCompat="@drawable/save"
        app:tint="#ffff" />

</androidx.constraintlayout.widget.ConstraintLayout>